.movieCard{
  margin-top: 130rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  background: #ffffff;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
}
.movieImage{
  height: 400rpx;
  width: 300rpx;
  margin-top: -100rpx;
  margin-left: 200rpx;
}
.movieTitle{
  font-size: 40rpx;
  line-height: 56rpx;
  font-weight: bold;
  text-align: center;
  opacity: 0.9;
  margin-top: 40rpx;
  margin-bottom: 50rpx;
}
.movieDescription{
  font-size: 35rpx;
  line-height: 49rpx;
  font-weight: bold;
  opacity: 0.7;
  margin-left: 50rpx;
  margin-right: 50rpx;
}
.btn{
  margin-top: 200rpx;
  margin-bottom: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.commentbtn{
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1rpx solid rgba(0, 0, 0, 0.05)
}
.btnImage{
  width: 60rpx;
  height: 60rpx;
  fill: #6699cc;
}
.btnText{
  margin-left: 20rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: #6699cc
}
.comment{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-left: 100rpx;
  margin-right: 30rpx;
}
.commentUser{
  display: flex;
  align-items: center;
}
.userImage{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.userNickName{
  margin-left: 30rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.8
}
.commentText{
  display: flex;
  margin-top: 20rpx;
  align-items: center;
}
.line{
  height: 30rpx;
  width: 30rpx;
  padding-left: 50rpx;
}
.text{
  margin-left: 30rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.7;
  word-break: break-all;
}
.voice{
  display: flex;
  border: 1rpx solid #E0EEEE;
  background-color: #CFCFCF;
  height: 60rpx;
  align-items: center;
  width: 300rpx;
}
.voiceImage{
  width: 50rpx;
  height: 50rpx;
  margin-left: 50rpx;
}
.duration{
  margin-left: 20rpx;
  font-size: 30rpx;
  opacity: 0.8
}