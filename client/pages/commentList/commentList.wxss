.commentList{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 100rpx;
}
.comment-card{
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
}
.commentList:last-child{
  border-bottom: none;
}
.userInfo{
  display: flex;
  align-items: center;
  flex-direction: row;
  margin-left: 80rpx;
  margin-right: 30rpx;
  margin-top: 20rpx;
}
.user-avatarurl{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.user-nickName{
  margin-left: 30rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  font-weight: bold;
  opacity: 0.6;
}
.commentText{
  margin-top: 60rpx;
  margin-left: 80rpx;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  opacity:0.6
}
.voice{
  display: flex;
  border: 1rpx solid #E0EEEE;
  background-color: #CFCFCF;
  height: 60rpx;
  align-items: center;
  width: 300rpx;
  margin-left: 100rpx;
  margin-top: 60rpx;
  margin-bottom: 30rpx;

}
.voiceImage{
  width: 50rpx;
  height: 50rpx;
  margin-left: 50rpx;
}
.duration{
  margin-left: 20rpx;
  font-size: 30rpx;
  opacity: 0.8
}
.btn{
  position: fixed;
  bottom: 0;
  height: 100rpx;
  text-align: center;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  width: 100%;
  color:  #6699cc;
}
.null-card{
  position: relative;
  margin:32rpx 52rpx 0;
  height: 360rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0,0,0,0.2);
  border-radius: 13rpx;
}
.null-image{
  position: absolute;
  top: 10rpx;
  left: 240rpx;
  height: 200rpx;
  width: 200rpx;
  opacity: 0.4;
}
.null-text{
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.4;
  font-weight: bold;
  position: absolute;
  top:250rpx;
  width: 646rpx;
  text-align: center;
}
.btnAdd{
  width: 300rpx;
  height: 100rpx;
  background: #F5E069;
  font-size: 35rpx;
  line-height: 100rpx;
  opacity: 0.8;
  font-weight: bold;
  text-align: center;
  position: absolute;
  top: 400rpx;
  left: 180rpx;
}