.movieCard{
  margin-top: 130rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  background: #ffffff;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
}
.movieImage{
  height: 400rpx;
  width: 300rpx;
  margin-top: -100rpx;
  margin-left: 200rpx;
}
.movieTitle{
  font-size: 40rpx;
  line-height: 56rpx;
  font-weight: bold;
  text-align: center;
  opacity: 0.9;
  margin-top: 40rpx;
  margin-bottom: 50rpx;
}
.movieDescription{
  font-size: 35rpx;
  line-height: 49rpx;
  font-weight: bold;
  opacity: 0.7;
  margin-left: 50rpx;
  margin-right: 50rpx;
}
.btn{
  margin-top: 200rpx;
  margin-bottom: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.comment{
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}
.btnImage{
  width: 60rpx;
  height: 60rpx;
  fill: #6699cc;
}
.btnText{
  margin-left: 20rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: #6699cc
}