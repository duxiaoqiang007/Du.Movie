.movieCard{
  margin-top: 130rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  background: #ffffff;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
}
.movieImage{
  height: 400rpx;
  width: 300rpx;
  margin-top: -100rpx;
  margin-left: 200rpx;
}
.movieTitle{
  font-size: 40rpx;
  line-height: 56rpx;
  font-weight: bold;
  text-align: center;
  opacity: 0.9;
  margin-top: 40rpx;
  margin-bottom: 50rpx;
}
.commentText{
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  width: 590rpx;
  margin: 20rpx 50rpx 30rpx 50rpx;
}
.commentVoice{
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
  margin: 200rpx 60rpx 100rpx 60rpx;
  justify-content: center;
  align-items: center;
  height: 100rpx;
}
.voiceImage{
  width: 60rpx;
  height: 60rpx;
}
.voiceTextNoRecord{
  margin-left: 20rpx;
  font-size: 36rpx;
  line-height: 50rpx;
  opacity: 0.8;
  font-weight: bold;
}
.voiceText{
  margin-left: 20rpx;
  font-size: 36rpx;
  line-height: 50rpx;
  opacity: 0.8;
  font-weight: bold;
  color: #6699cc;
}
.finish{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
}